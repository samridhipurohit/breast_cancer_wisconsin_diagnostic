#Makefile for DATA 550 Final Project 4

#Step 1: Build HTML report
output/report.html: output/report.Rmd code/02_render_report.R summary_outputs
	Rscript code/02_render_report.R

#Step 2: Generate table and figure (depends on dataset)
summary_outputs: data/breast_cancer_wisconsin.csv code/01_table_script.R code/02_figure_script.R
	Rscript code/01_table_script.R
	Rscript code/02_figure_script.R

#Step 3: Clean up output files
.PHONY: clean
clean:
	rm -f output/*.csv output/*.png output/*.html
